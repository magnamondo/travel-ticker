# Database
DATABASE_URL=data/db/database.db

# Data directory for uploads
DATA_DIR=data

# Email service (optional - emails are logged to console if not set)
# Get your API key from https://resend.com
RESEND_API_KEY=

# Admin user - this email gets admin role on registration
ADMIN_EMAIL=

# IMPORTANT for production: Set to your actual domain
# Required by SvelteKit for CSRF protection and link generation
# Must include protocol (https:// for production)
ORIGIN=http://localhost

# Caddy reverse proxy configuration
# Set to your domain for automatic HTTPS (e.g., example.com)
# Leave as localhost for local development (HTTP only)
CADDY_DOMAIN=localhost

# Port configuration (defaults: 80 for HTTP, 443 for HTTPS)
PORT=80
HTTPS_PORT=443
